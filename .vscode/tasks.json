{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "tsc: type-watch",
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "option": "watch",
      "problemMatcher": [
        "$tsc-watch",
      ],
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "eslint",
      "type": "shell",
      "command": "npx eslint src/* --ext .js,.jsx,.ts,.tsx",
      "problemMatcher": [
        "$eslint-stylish"
      ],
      "group": "build",
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "debug-start",
      "dependsOn": [
        "typescript: type-check",
        "vite-dev-server: start"
      ],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "typescript: type-check",
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        // "revealProblems": "onProblem",
        "revealProblems": "never",
        "focus": true,
        "showReuseMessage": true,
        "clear": true,
        "panel": "shared",
        "close": false,
        // "group": "build"
      },
      "problemMatcher": "$tsc"
    },
    {
      "label": "vite-dev-server: start",
      "type": "npm",
      "script": "dev",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        // "revealProblems": "onProblem",
        "revealProblems": "never",
        "focus": false,
        "showReuseMessage": true,
        "clear": true,
        // "panel": "dedicated",
        "panel": "shared",
        "close": true,
        // "group": "build"
      },
      "problemMatcher": [
        {
          "owner": "typescript",
          "source": "Typescript",
          "fileLocation": [
            "absolute"
          ],
          "applyTo": "allDocuments",
          "background": {
            "activeOnStart": true,
            "beginsPattern": "> vite|.*Internal server error: Transform failed with.*",
            "endsPattern": ".*âžœ  Local.*|.*at failureErrorWithLog.*"
          },
          "pattern": [
            {
              "regexp": "^ERROR\\(TypeScript\\)\\s+(.*)$",
              "message": 1
            },
            {
              "regexp": "^FILE\\s+(.*):(\\d+):(\\d+)$",
              "file": 1,
              "line": 2,
              "column": 3
            }
          ]
        }
      ],
      "isBackground": true
    },
    {
      "label": "debug-end",
      "dependsOn": [
        "vite-dev-server: end"
      ],
      "dependsOrder": "parallel"
    },
    {
      "label": "vite-dev-server: end",
      "type": "shell",
      "command": "echo ${input:vite-dev-server_terminate}"
    }
  ],
  "inputs": [
    {
      "id": "vite-dev-server_terminate",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "vite-dev-server: start"
    }
  ]
}
